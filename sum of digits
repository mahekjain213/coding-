#inlude<stdio.h>
#include<conio.h>
int sum(int num);
void main()
{
  int num,x;
  printf("enter the number: \t");
  scanf("%d", &num);
  x=sum(num);
  printf("the sum of the digits of %d is :%d" ,num,x);
  getch();
}

int sum(int num)
{
   int s,a;
   s = s (num%10);
   a = num/10;
   if(a>0)
   {
   sum(a);
   }
   return s;
}
